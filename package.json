{
  "name": "mediarich",
  "version": "1.0.0",
  "description": "Creation tool for Ubicast",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "test": "node ./scripts/test.js",
    "backend": "cd ./packages/backend && node ./scripts/start.js && cd ../..",
    "frontend": "cd ./packages/frontend && node ./scripts/start.js && cd ../..",
    "coverage": "node scripts/test.js --watchAll=false --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martin-danhier/mediarich.git"
  },
  "author": "Martin Danhier",
  "bugs": {
    "url": "https://github.com/martin-danhier/mediarich/issues"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/scripts"
    ],
    "projects": [
      "<rootDir>/packages/backend/jest.config.js",
      "<rootDir>/packages/frontend/jest.config.js"
    ]
  },
  "homepage": "https://github.com/martin-danhier/mediarich#readme",
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^26.0.20",
    "@types/supertest": "^2.0.10",
    "babel-jest": "^26.6.3",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "jest-environment-jsdom-fourteen": "^1.0.1",
    "jest-fetch-mock": "^3.0.3",
    "jest-watch-typeahead": "^0.4.2",
    "react-app-polyfill": "^1.0.6",
    "react-dev-utils": "^11.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.1"
  }
}
